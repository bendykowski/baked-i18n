{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./lib",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "./typings/index.d.ts",
    "./src/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./typings/index.d.ts",
    "./src/cli.ts",
    "./src/files.ts",
    "./src/index.ts",
    "./src/map-translation.ts",
    "./src/parser.ts",
    "./src/types.ts"
  ]
}
